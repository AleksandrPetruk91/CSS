<header class='header'>
  {{>logo}}

  <nav class='header_nav '>
    <div class="header_nav_right">
        {{>nav list=header}}
    </div>    
  </nav>
</header>

{{#with main}}
  <div class="main">
    <div class="main_content">
      <h1 class="main_title">{{heading}}</h1>
      <p class="main_text">{{description}}</p>
      <a href='{{href}}' class='button main_button'>
      {{button}}
    </a>
    </div>
    <img src="{{image}}" alt="Main image" class="main_image">
  </div>
{{/with}}

<main class="featured">
  {{#each featured}}
    {{>cardFeatured data=this}}
  {{/each}}
</main>


  <div class="actions">
    {{#each actions}}
      <div class="actions_content">
        <h3 class="actions_heading">{{heading}}</h3>
        <a class="actions_button " href="{{url}}">{{text}}</a>
      </div>
    {{/each}}
  </div>


<footer class="footer" >
  <div >
    {{> logo}}
    <span class="footer_copyright">Copyright 2023-2024</span>
  </div>

  {{#each footer}}
    <div >
      <span class="footer_title"><b>{{title}}</b></span>
      {{>nav list=links isVertical=true}}
    </div>
  {{/each}}
</footer>

