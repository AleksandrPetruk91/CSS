<header class='header'>
  <a href="#test">
    {{>logo}}
  </a>

  <nav class='header_nav '>
    <div class="header_nav_right">
        {{>nav list=header}}
    </div>    
  </nav>
</header>

<main class="main">
  {{#with info}}
    <div class="msg">
      <h1 class="msg_title">{{title}}</h1>
      <p class="msg_text">{{description}}</p>
    </div>
  {{/with}}
  
  {{#with form}}
    <form class="form">
      <div class="form_input_list">
        {{#each inputs}}
          <input type="{{type}}" placeholder="{{placeholder}}" class="form_input" name"{{name}}" id="{{id}}" />
        {{/each}}
      </div>

      <div class="form_checkbox_block">
        {{#with checkbox}}
          <input type="checkbox" name="{{name}}" />
          <label for="{{name}}">{{label}}</label>
        {{/with}}
      </div>

      <button type="submit" class="form_button">{{button}}</button>
      <p class="form_info">{{info}}</p>
    </form>
  {{/with}}
</main>



    <div class="updates">
      {{#with updates}}
        <h1 class="updates_title">{{title}}</h1>

        {{#each list}}
          <div class="updates_list">
          <img class='updates_list_image'src='https://picsum.photos/32/32'alt='updates_img'/>
           <div class="update_list_mesage">
              <p class="updates_list_nickname">{{nickname}}</p>
              <span class="updates_list_description">{{description}}</span>
           </div>
          </div>
        {{/each}}

        <a href="{{show_all.url}}" class="updates_list_link">{{show_all.text}}</a>
      {{/with}}
    </div>



<div class="expirience">
  {{#with expirience}}
    <h1 class="expirience_title">{{title}}</h1>
    <p class="expirience_badge">{{badge}}</p>
    
    <div class="expirience_list">
      {{#each list}}
        <div class="expirience_card">
          <h2 class="expirience_name">{{name}}</h2>
          <p class="expirience_details">{{details}}</p>
        </div>
      {{/each}}
    </div>
  {{/with}}
</div>

<footer class="footer" id="test" >
  <div >
      {{> logo}}
      <span class="footer_copyright">Copyright 2023-2024</span>
  </div>

  {{#each footer}}
    <div >
      <span class="footer_title"><b>{{title}}</b></span>
      {{>nav list=links isVertical=true}}
    </div>
  {{/each}}
</footer>

